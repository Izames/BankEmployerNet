<Window x:Class="BankEmployerNet.ApplicationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankEmployerNet"
        mc:Ignorable="d"
        Title="ApplicationsWindow" Height="450" Width="800">
    <Grid Background="#FF4BB8FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Sort" Content="сортировать" Grid.Column="1" Grid.Row="0" Background="#FF1F4DFF"/>
        <Button x:Name="Accept" Content="принять" Grid.Row="1" Grid.Column="0" Click="Accept_Click"/>
        <Button x:Name="Decline" Content="отклонить" Grid.Row="1" Grid.Column="2" Click="Decline_Click"/>
        <ListBox x:Name="zayavki" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"  FontSize="18" Background="#FFC6C1C1"/>
    </Grid>
</Window>
